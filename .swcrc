{
  "$schema": "http://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true
    },
    "baseUrl": "./src",
    "paths": {
      "class/*": ["class/*"],
      "util/*": ["util/*"],
      // necessary to import `v1/index.ts`
      "v1": ["v1"],
      "v1/*": ["v1/*"],
      "test": ["test"],
      "test/*": ["test/*"]
    }
  },
  "env": {
    "targets": {
      "node": 16
    }
  },
  "module": {
    "type": "commonjs"
  },
  "minify": true
}
